<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_phone_by_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.UpdatePhoneByEmailActivity">
    <include
        layout="@layout/normal_top_header" />
    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择邮箱验证"
        android:textColor="@color/gray"/>
    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已绑定验证邮箱："
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/notselect_text"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="短信验证码："
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_verifycode"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="请输入验证码"
            android:textColorHint="@color/notselect_text"
            android:textSize="14sp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_get_verifycode"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="@drawable/btn_main_header"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tag"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码已发送至您的邮箱，请进入邮箱查看验证码"
        android:textColor="@color/gray"
        android:textSize="12sp"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="下一步"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_orange"/>


</LinearLayout>
