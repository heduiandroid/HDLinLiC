<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="122dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                fresco:progressBarImage="@drawable/pic_yi_progress"
                fresco:progressBarImageScaleType="centerInside"
                fresco:progressBarAutoRotateInterval="5000"
                fresco:failureImage="@drawable/pic_yi_failure"
                fresco:failureImageScaleType="centerInside"
                fresco:retryImage="@drawable/pic_yi_retry"
                fresco:retryImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/pic_yi_place"

                android:layout_margin="10dp"
                android:id="@+id/shop_sort_health_item_avatar_im"
                android:layout_width="95dp"
                android:layout_height="95dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_marginRight="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/shop_sort_health_item_name_tv"
                        android:textColor="@color/color_shop_sort_text_item"
                        android:text="药膳养身"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:gravity="center"

                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_shop_sort_health_item_see"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/shop_sort_health_item_hits_tv"
                            android:textColor="@color/color_shop_sort_health_item_see"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/color_shop_sort_health_item_content"
                        android:id="@+id/shop_sort_health_item_content_tv"
                        android:textSize="12dp"
                        android:text="良药苦口利于病，这说的就是中药膳食，对于长期中药养身或者中药治疗的人来说应该不陌生，这得益于"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_shop_sort_health_item_label"
                        android:textSize="11dp"
                        android:text="标签:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_shop_sort_health_item_label_item"
                        android:layout_marginLeft="9dp"
                        android:id="@+id/shop_sort_health_item_label_tv"
                        android:textSize="11dp"
                        android:text="养身 治疗 药膳"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shop_sort_health_item_time_tv"
                            android:textSize="9dp"
                            android:textColor="@color/color_shop_sort_health_item_time"
                            android:text="2016-11-20"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
