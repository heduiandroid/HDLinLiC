<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="6dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="6dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/order_iv_health_way_item"
        android:layout_width="107dp"
        android:layout_height="86dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:id="@+id/ll_health_fistLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/iv_order_healthway_itemtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="【常吃6种食物毁智商】"
                android:textSize="15sp"/>

            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/tv_health_way_itemliulanliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="177"
                android:textColor="@color/gray_index_listview_menshi"
                android:textSize="12sp"/>


            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_health_way_itemliulanliang"
                android:background="@mipmap/order_iv_health_item_browse"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_health_fistLine"
            android:paddingLeft="5dp"
            android:paddingTop="3dp">


            <TextView
                android:lineSpacingExtra="3dp"
                android:id="@+id/tv_order_healthway_item_lead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="12sp"
                android:maxLines="2"
                android:text="导语:开始了发动机是离开房间了看见为即将开电风扇,开始了发动机是离开房间了看见为即将开电风扇。"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_healthway_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签："
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_order_healthway_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="智商 头痛 味精"
                android:textColor="@color/color_shop_detail_num"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/iv_order_health_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="2016-4-23"
                android:textSize="10sp"/>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
