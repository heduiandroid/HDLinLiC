<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.linli.consumer.ui.main.JoinUsActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="入驻类别"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_shop_type"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:drawableRight="@mipmap/view_open"
            android:textColor="@color/gray"
            android:text="实体店入驻"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/line_part_thin"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="入驻区域"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_area"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:drawableRight="@mipmap/view_open"
            android:textColor="@color/gray"
            android:hint="选择您所在区域"
            android:textColorHint="@color/partingline"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/line_part_thin"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/tag_name"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_shop_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:maxLength="15"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/gray_fooddetails_zi"
            android:background="@color/white"
            android:hint="输入店铺名称"
            android:textColorHint="@color/gray_fooddetails_bag"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/line_part_thin"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_contactor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:maxLength="15"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/gray_fooddetails_zi"
            android:background="@color/white"
            android:hint="输入姓名"
            android:textColorHint="@color/gray_fooddetails_bag"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/line_part_thin"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_contact_way"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:maxLength="11"
            android:textSize="15sp"
            android:background="@color/white"
            android:hint="输入手机号码"
            android:textColor="@color/gray_fooddetails_zi"
            android:inputType="phone"
            android:textColorHint="@color/gray_fooddetails_bag"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/line_part_thin"/>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_orange"/>
</LinearLayout>
