<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_take_car_wait_driver_accept"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.linli.consumer.ui.takecar.TakeCarWaitDriverAcceptActivity">
    <include
        layout="@layout/normal_top_header"/>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_start_place"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/notselect_text"
            android:drawableLeft="@mipmap/ic_start_point"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/notselect_text"/>
        <TextView
            android:id="@+id/tv_end_place"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:textColor="@color/gray"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColorHint="@color/notselect_text"
            android:drawableLeft="@mipmap/ic_end_point"
            android:textSize="16sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_wait_for_accept"
        android:visibility="gone"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_progress_flash"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_waiting_circel"/>
        <TextView
            android:id="@+id/tv_time_counts"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="14sp"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_below="@id/iv_progress_flash"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请耐心等待司机接单..."
            android:textColor="@color/gray"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mv_location_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.baidu.mapapi.map.MapView>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_blackframe"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_driver_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"/>
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_driver_portraint"
                    android:layout_gravity="center_vertical"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    fresco:fadeDuration="300"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@mipmap/default_background"
                    fresco:placeholderImageScaleType="centerInside"
                    fresco:failureImage="@mipmap/default_background"
                    fresco:failureImageScaleType="centerInside"
                    fresco:roundAsCircle="true"/>
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_family_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="无信息"
                                android:textSize="16sp"
                                android:textColor="@color/gray"/>
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/rb_driver_level"
                                    style="@style/roomRatingBarOrange"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="1"/>
                                <TextView
                                    android:id="@+id/tv_driver_persent"
                                    android:gravity="top"
                                    android:paddingLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/orange"/>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/iv_message_driver"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_message"
                            android:background="@drawable/selector_transparent"/>
                        <ImageView
                            android:id="@+id/iv_call_driver"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_call_driver"
                            android:background="@drawable/selector_transparent"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_car_infos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="无车辆信息"
                        android:textColor="@color/gray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
