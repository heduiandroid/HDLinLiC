<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.UpdatePasswordActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text="手机号码："/>
        <TextView
            android:id="@+id/tv_phone"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="159****6776"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text="验证码："/>
        <EditText
            android:id="@+id/et_verifycode"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:inputType="text"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:background="@color/white"
            android:textSize="14sp"
            android:maxLength="6"
            android:hint="输入手机验证码"
            android:textColorHint="@color/partingline"/>
        <TextView
            android:id="@+id/tv_get_verifycode"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="@drawable/btn_main_header"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text="新密码："/>
        <EditText
            android:id="@+id/et_newpwd"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:background="@color/white"
            android:textSize="14sp"
            android:hint="输入新密码"
            android:textColorHint="@color/partingline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text="重复密码："/>
        <EditText
            android:id="@+id/et_renewpwd"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:background="@color/white"
            android:textSize="14sp"
            android:hint="再次输入新密码"
            android:textColorHint="@color/partingline"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_orange"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
