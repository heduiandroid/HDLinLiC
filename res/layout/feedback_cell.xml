<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_white">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/niv_cell_shoppic"
            android:layout_width="120dp"
            android:layout_height="90dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/default_background"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@mipmap/default_background"
            fresco:failureImageScaleType="centerInside"
            fresco:roundedCornerRadius="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cell_name"
                    android:padding="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="味多美"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RatingBar
                    android:id="@+id/room_ratingbar"
                    android:layout_margin="2dp"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:rating="5">
                </RatingBar>
                <TextView
                    android:id="@+id/tv_per_fee"
                    android:paddingLeft="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="¥60/人"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:paddingRight="3dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5km"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>