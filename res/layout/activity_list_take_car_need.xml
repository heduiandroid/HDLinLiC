<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_take_car_need"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.takecar.ListTakeCarNeedActivity">
    <include
        layout="@layout/normal_top_header" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_taxiuserneed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_taxiuserneed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/light_gray"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:dividerHeight="5dp">
        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@id/tv_nodata"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无行程记录"
        android:textColor="@color/notselect_text"
        android:visibility="gone"/>
</LinearLayout>
