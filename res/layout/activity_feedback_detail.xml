<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    tools:context=".ui.main.FeedbackDetailActivity">
    <include
        android:id="@+id/header"
        layout="@layout/normal_top_header"/>

    <LinearLayout
        android:id="@+id/ll_buy"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_horizontal">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btn_goto_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_goto_shop"/>
                    <TextView
                        android:paddingTop="1dp"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进入店铺"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:visibility="visible"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_add_shopcart"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_shopcart_feedback"/>
                    <TextView
                        android:paddingTop="1dp"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入购物车"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:visibility="visible"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_buy_immediate"
                android:layout_gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="立即购买"
                android:textSize="16sp"
                android:background="@drawable/btn_orange"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_shop_data"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/niv_shop_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/default_background"
                fresco:placeholderImageScaleType="centerInside"
                fresco:failureImage="@mipmap/default_background"
                fresco:failureImageScaleType="centerInside"
                fresco:roundAsCircle="true"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:singleLine="true"
                    android:textSize="16sp"/>
                <RatingBar
                    android:id="@+id/room_ratingbar"
                    android:layout_marginTop="5dp"
                    style="@style/roomRatingBarOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:rating="5">
                </RatingBar>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_message"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/imageview_message"
                android:background="@drawable/selector_white"/>
            <ImageView
                android:id="@+id/iv_call"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/imageview_call"
                android:background="@drawable/selector_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_shop_address"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="地址："
                android:textSize="13sp"/>
            <LinearLayout
                android:id="@+id/ll_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/selector_white"
                android:visibility="gone">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_dl_concerned"/>
                <TextView
                    android:id="@+id/tv_if_concernd"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_complaint"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/selector_white"
                android:visibility="gone">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_dl_help"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投诉"
                    android:textSize="12sp"
                    android:textColor="@color/notselect_text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_blacklist"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/imageview_blacklist"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="屏蔽"
                    android:textColor="@color/orange"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_above="@id/ll_buy"
        android:layout_below="@id/ll_shop_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <ListView
            android:id="@+id/lv_recommends"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/white"
            android:dividerHeight="3dp"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000">
        </ListView>
    </LinearLayout>


</RelativeLayout>
