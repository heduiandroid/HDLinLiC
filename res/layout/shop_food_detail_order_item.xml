<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                fresco:progressBarImage="@drawable/pic_yi_progress"
                fresco:progressBarImageScaleType="centerInside"
                fresco:progressBarAutoRotateInterval="5000"
                fresco:failureImage="@drawable/pic_yi_failure"
                fresco:failureImageScaleType="centerInside"
                fresco:retryImage="@drawable/pic_yi_retry"
                fresco:retryImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/pic_yi_place"

                android:layout_centerVertical="true"
                android:id="@+id/shop_food_detail_order_item_avatar_im"
                android:layout_toRightOf="@id/shop_cart_dialog_item_cb"
                android:layout_width="73dp"
                android:layout_height="73dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/shop_food_detail_order_item_avatar_im"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/shop_food_detail_order_item_name_tv"
                    android:textSize="14dp"
                    android:text="---"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/shop_food_detail_order_item_spec_tv"
                    android:textColor="@color/partingline"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/shop_food_detail_order_item_price_tv"
                    android:textColor="@color/orange"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:text="ï¿¥---"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shop_food_detail_order_item_num_tv"
                    android:textSize="14dp"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

</LinearLayout>