<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/shop_food_detail_order_title_left_ll"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <ImageView
                    android:id="@+id/shop_food_detail_order_title_left_im"
                    android:src="@mipmap/ic_shop_detail_food_order_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/shop_food_detail_order_title_left_tv"
                    android:layout_marginLeft="11dp"
                    android:text="堂吃"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/gray_fooddetails_bag"
            android:layout_width="1dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:id="@+id/shop_food_detail_order_title_right_ll"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <ImageView
                    android:id="@+id/shop_food_detail_order_title_right_im"
                    android:src="@mipmap/ic_shop_detail_food_order_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/shop_food_detail_order_title_right_tv"
                    android:layout_marginLeft="11dp"
                    android:text="外卖"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/gray_fooddetails_bag"
            android:layout_width="1dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:id="@+id/shop_food_detail_order_title_right_right_ll"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <ImageView
                    android:id="@+id/shop_food_detail_order_title_right_right_im"
                    android:src="@mipmap/ic_shop_detail_food_order_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/shop_food_detail_order_title_right_right_tv"
                    android:layout_marginLeft="11dp"
                    android:text="预订"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>