<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".ui.main.EWSettingPayPwdActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/bg_editmoney"
        android:weightSum="4">
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1.1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_marginRight="5dp"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="输入6位支付密码"
            android:textColorHint="@color/partingline"
            android:maxLength="6"
            android:textSize="16sp"
            android:inputType="numberPassword"/>
        <ImageView
            android:id="@+id/cleartext"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/righttop_close"
            android:background="@drawable/selector_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/bg_editmoney"
        android:weightSum="4">
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1.1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="再次输入"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_repwd"
            android:layout_marginRight="5dp"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="输入6位支付密码"
            android:textColorHint="@color/partingline"
            android:maxLength="6"
            android:textSize="16sp"
            android:inputType="numberPassword"/>
        <ImageView
            android:id="@+id/recleartext"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/righttop_close"
            android:background="@drawable/selector_white"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_orange"
        android:text="下一步"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
