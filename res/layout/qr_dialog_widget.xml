<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/qr_dialog_back_im"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_qr_dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/qr_dialog_qr_im"
            android:layout_centerInParent="true"
            android:layout_width="125dp"
            android:layout_height="125dp"
            />
        <com.linli.consumer.widget.CircleImageView
            android:background="@android:color/transparent"
            android:id="@+id/qr_dialog_avatar_cim"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/qr_dialog_qr_im"
            android:layout_width="60dp"
            android:layout_height="60dp" />


        <ImageView
            android:background="@color/gray"
            android:id="@+id/qr_dialog_close"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_below="@id/qr_dialog_back_im"
            android:src="@mipmap/ic_qr_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


</LinearLayout>