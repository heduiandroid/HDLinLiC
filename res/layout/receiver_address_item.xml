<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/selector_white">
        <TextView
            android:id="@+id/tv_addressee"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/gray"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_toRightOf="@id/tv_addressee"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="收货人电话"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_tag"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gray"
            android:drawableLeft="@mipmap/ic_addr_tag"/>
        <ImageView
            android:id="@+id/iv_update_addr"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_addr_edit"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_alignLeft="@id/tv_addressee"
            android:layout_below="@id/tv_addressee"
            android:layout_toLeftOf="@id/iv_update_addr"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址正在加载中..."
            android:textColor="@color/gray_index_listview_menshi"/>
    </RelativeLayout>
</LinearLayout>