<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@drawable/bg_white_blackframe">
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@mipmap/bg_pro_number">
                <ImageView
                    android:id="@+id/iv_num_down"
                    android:layout_margin="1dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_num_down"
                    android:background="@drawable/selector_white"/>
                <TextView
                    android:id="@+id/tv_shopcart_number"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/iv_num_up"
                    android:layout_margin="1dp"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_num_up"
                    android:background="@drawable/selector_white"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_above="@id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_blackframe">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_pro_pic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/default_background"
                fresco:placeholderImageScaleType="centerInside"
                fresco:failureImage="@mipmap/default_background"
                fresco:failureImageScaleType="centerInside"
                fresco:roundedCornerRadius="5dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_pro_pic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundedCornerRadius="5dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bottom"
            android:orientation="vertical"
            android:background="@mipmap/bg_navigation">
            <TextView
                android:id="@+id/tv_prod_name"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名称"

                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_cailiao"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>