<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_receive_add_prise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.ReceiveAddPriseActivity">
    <include
        layout="@layout/normal_top_header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/light_gray">
            <LinearLayout
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_shoplogo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    fresco:fadeDuration="300"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@mipmap/default_background"
                    fresco:placeholderImageScaleType="centerInside"
                    fresco:failureImage="@mipmap/default_background"
                    fresco:failureImageScaleType="centerInside"
                    fresco:roundAsCircle="true"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shopname"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="店铺名称"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <RatingBar
                        android:id="@+id/room_ratingbar"
                        android:layout_margin="2dp"
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="3"
                        android:rating="5">
                    </RatingBar>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_talk"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_ordermessage"
                    android:background="@drawable/selector_white"/>
                <ImageView
                    android:id="@+id/iv_call"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_orderphone"
                    android:background="@drawable/selector_white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_orderno"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号：123"
                android:textColor="@color/orange"/>
            <com.linli.consumer.myview.MyListView
                android:id="@+id/mlv_prods"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/light_gray"
                android:dividerHeight="5dp"
                android:scrollbars="none"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000">
            </com.linli.consumer.myview.MyListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
