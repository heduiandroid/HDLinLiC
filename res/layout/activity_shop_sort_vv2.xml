<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_sort_vv2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.linli.consumer.ui.shop_v2.ShopSortV2Activity">
    <include
        android:id="@id/header"
        layout="@layout/normal_top_header" />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_goods"
        android:layout_below="@id/header"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_nodata"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="请稍后，商品正在准备中..."
        android:textColor="@color/partingline"
        android:background="@color/white"
        android:visibility="gone"/>
</RelativeLayout>
