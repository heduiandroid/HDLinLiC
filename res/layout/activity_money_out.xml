<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.MoneyOutActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_totalmoney"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现额度0.00元"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_outallmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:textColor="@color/orange"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/bg_editmoney"
        android:weightSum="4">
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_outmoney"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/gray_online_line"
            android:hint="单笔最少100，最多2万"
            android:textSize="15sp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_changebankcard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_white"
        android:weightSum="4">
        <TextView
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="16sp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_outbank"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="2.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="15sp"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/imageview_details"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预计24小时内到账"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/orange"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_orange"
        android:text="提现"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
