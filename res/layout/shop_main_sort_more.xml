<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_line"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <ImageView
        android:id="@+id/iv_ad_pic"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rl_shopcate"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/shop_main_sort_more_name_tv"
            android:layout_centerVertical="true"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/shop_main_sort_more_ll"
            android:layout_marginRight="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_more"
                android:textSize="13dp"
                android:layout_marginRight="5dp"
                android:text="更多"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_more"
                android:background="@mipmap/ic_pyp_right_shopindex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <!--<View
        android:id="@+id/shop_main_sort_more_view"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>-->

</LinearLayout>