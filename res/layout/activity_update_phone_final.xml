<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_phone_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.UpdatePhoneFinalActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:id="@+id/ll_verify_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新手机号："
                android:textSize="15sp"
                android:textColor="@color/gray"/>
            <EditText
                android:id="@+id/et_phone_number"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新绑定的手机号"
                android:textColorHint="@color/notselect_text"
                android:background="@color/white"
                android:textSize="14sp"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="短信验证码："
                android:textSize="15sp"
                android:textColor="@color/gray"/>
            <EditText
                android:id="@+id/et_verifycode"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textColorHint="@color/notselect_text"
                android:textSize="14sp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_get_verifycode"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@drawable/btn_main_header"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <TextView
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="20dp"
            android:paddingRight="60dp"
            android:lineSpacingMultiplier="1.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_for_order_getcode"
            android:textSize="13sp" />
        <Button
            android:id="@+id/btn_confirm"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange"/>
    </LinearLayout>
</LinearLayout>
