<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="122dp">
        <LinearLayout
            android:id="@+id/shop_sort_recipe_item_container_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/shop_sort_recipe_item_avatar_im"
                android:layout_width="95dp"
                android:layout_height="95dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shop_sort_recipe_item_name_tv"
                        android:textColor="@color/color_shop_sort_text_item"
                        android:text="---"
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_shop_sort_text_price"
                        android:textSize="11dp"
                        android:text="主料:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_shop_sort_text_location"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/shop_sort_recipe_item_mainingredient_tv"
                        android:textSize="11dp"
                        android:text="---"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_shop_sort_text_price"
                        android:textSize="11dp"
                        android:text="辅料:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_shop_sort_text_location"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/shop_sort_recipe_item_subingredient_tv"
                        android:textSize="11dp"
                        android:text="---"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

