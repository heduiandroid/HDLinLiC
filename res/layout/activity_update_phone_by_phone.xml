<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_phone_by_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="com.linli.consumer.ui.main.UpdatePhoneByPhoneActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:id="@+id/ll_verify_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="通过手机验证："
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_phone_number"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:textColorHint="@color/notselect_text"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="短信验证码："
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/et_verifycode"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textColorHint="@color/notselect_text"
                android:textSize="14sp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_get_verifycode"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@drawable/btn_main_header"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <TextView
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="20dp"
            android:paddingRight="60dp"
            android:lineSpacingMultiplier="1.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_for_order_getcode"
            android:textSize="13sp"
            android:text="若该手机号无法接收验证短信，请拨打客服电话400-898-8830申诉更改验证收手机"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/btn_orange"
            android:text="下一步"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
