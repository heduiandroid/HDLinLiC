<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linli.consumer.ui.main.YaoYiYaoActivity">
    <include
        android:id="@+id/header"
        layout="@layout/paiyipai_top_header" />
    <RelativeLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_paiyipai">
        <LinearLayout
            android:id="@+id/ll_all"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_redbag"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="红包"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_gray_background_whitetext"/>
            <Button
                android:id="@+id/btn_coupon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="优惠券"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_gray_background_whitetext"/>
            <Button
                android:id="@+id/btn_bill"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="账单"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_gray_background_whitetext" />
        </LinearLayout>
        <View
            android:layout_above="@id/ll_all"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hand"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_yyyhand"/>
        <LinearLayout
            android:id="@+id/ll_waitingtext"
            android:layout_below="@id/iv_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_gravity="center_vertical"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:id="@+id/tv_tag"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在搜索附近红包,红包啊红包你在哪里?"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
