<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fujidan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.linli.consumer.ui.main.FujidanActivity">
    <View
        android:id="@+id/view_center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>


    <RelativeLayout
        android:id="@+id/rl_bg_fujidan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_fujidan"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/iv_egg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_title"
        android:layout_below="@id/view_center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_fujidantitle"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/iv_tem34"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/iv_temperature34"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_tem35"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/iv_temperature35"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_tem36"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/iv_temperature36"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_tem37"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/iv_temperature37"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_tem37d5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/iv_temperature37d5"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_exit"
        android:background="@drawable/selector_transparent"/>
    <ImageView
        android:id="@+id/iv_owneggs"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_owneggs"
        android:background="@drawable/selector_transparent"/>
    <LinearLayout
        android:id="@+id/ll_coupon_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="invisible">
        <LinearLayout
            android:id="@+id/ll_center_coupon"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:background="@mipmap/bg_center_coupon">
            <RelativeLayout
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="230dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺优惠券"
                    android:textSize="14sp"
                    android:textColor="@color/heavyblue"/>
                <ImageView
                    android:id="@+id/iv_couponname"
                    android:paddingTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_yuan"
                    android:padding="5dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toLeftOf="@id/iv_couponname"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/heavyblue"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBottom="@id/tv_yuan"
                    android:layout_toLeftOf="@id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="50dp"
                    android:textColor="@color/heavyblue"/>
            </RelativeLayout>
            <View
                android:id="@+id/view_show_couponQRCode"
                android:layout_width="80dp"
                android:layout_height="match_parent">
            </View>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_concern_shop"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cb_checked"/>
            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="关注此店铺"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tag"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:layout_above="@id/ll_coupon_center"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/brown"
        android:visibility="visible"
        android:background="@mipmap/iv_fijidan_qipao"/>
</RelativeLayout>
