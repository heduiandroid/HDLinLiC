<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bound_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.BoundEmailActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入绑定邮箱："
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="请输入绑定的邮箱号"
            android:textSize="14sp"
            android:textColorHint="@color/partingline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邮箱验证码："
            android:textSize="15sp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/et_verifycode"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:background="@color/white"
            android:textColorHint="@color/partingline"/>
        <TextView
            android:id="@+id/tv_get_verifycode"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="@drawable/btn_main_header"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tag"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:text="验证码已发送至您的邮箱，请进入邮箱查看验证码"/>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/btn_orange"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
