<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feed_back_detail_right_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linli.consumer.ui.main.FeedBackDetailRightDialog">
    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_gray">
        <TextView
            android:id="@+id/tv_shopcart"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_shopcart_right_head"
            android:background="@drawable/selector_white"/>
        <TextView
            android:id="@+id/tv_concern"
            android:layout_marginTop="1dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_dl_concerned"
            android:background="@drawable/selector_white"/>
        <TextView
            android:id="@+id/tv_complaint"
            android:layout_marginTop="1dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="投诉"
            android:textColor="@color/notselect_text"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_dl_help"
            android:background="@drawable/selector_white"/>
    </LinearLayout>
</RelativeLayout>
