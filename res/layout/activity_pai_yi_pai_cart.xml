<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pai_yi_pai_cart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="店铺购物车"
            android:textColor="@color/gray"/>
        <View
            android:id="@+id/view_line"
            android:layout_below="@id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/tv_alert"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="这里空空如也哦~"
            android:textSize="12sp"
            android:textColor="@color/partingline"/>
        <LinearLayout
            android:id="@+id/ll_confirm"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/selector_transparent">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去结算"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共计："
                    android:textSize="14sp"
                    android:textColor="@color/gray_index_listview_menshi"/>
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textSize="14sp"
                    android:textColor="@color/lightred"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_goods"
            android:layout_marginBottom="1dp"
            android:layout_below="@id/view_line"
            android:layout_above="@id/ll_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>
