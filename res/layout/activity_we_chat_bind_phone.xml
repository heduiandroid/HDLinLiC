<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_update_phone_by_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/normal_top_header" />
    <TextView
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:text="为了你的账户安全，请绑定手机号"/>
    <LinearLayout
        android:id="@+id/ll_verify_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <EditText
                android:id="@+id/et_idcard"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="number"
                android:hint="@string/id_card_number"
                android:textColor="@color/gray"
                android:textColorHint="@color/notselect_text"
                android:textSize="16sp"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <EditText
                    android:id="@+id/et_phone_number"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="请输入手机号"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/notselect_text"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_get_verifycode"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:background="@drawable/btn_orange"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <EditText
                android:id="@+id/et_verifycode"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textColor="@color/gray"
                android:textColorHint="@color/notselect_text"
                android:textSize="16sp"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/btn_orange"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
