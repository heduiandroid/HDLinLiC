<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/zuo3"/>

        <RelativeLayout
            android:id="@+id/reorder1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20.5dp"
                android:gravity="center_vertical"
                android:text="人气最高"
                android:textColor="@color/gray"/>
            <ImageView
                android:id="@+id/sure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="9dp"
                android:src="@mipmap/order_iv_true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reorder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20.5dp"
                android:gravity="center_vertical"
                android:text="环境最佳"
                android:textColor="@color/gray"/>
            <ImageView
                android:id="@+id/sure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="9dp"
                android:src="@mipmap/order_iv_true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reorder3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20.5dp"
                android:gravity="center_vertical"
                android:text="人均最低"
                android:textColor="@color/gray"/>
            <ImageView
                android:id="@+id/sure3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="9dp"
                android:src="@mipmap/order_iv_true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reorder4"
            android:layout_width="wrap_content"
            android:layout_height="70dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20.5dp"
                android:gravity="center_vertical"
                android:text="人均最高"
                android:textColor="@color/gray"/>
            <ImageView
                android:id="@+id/sure4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="9dp"
                android:src="@mipmap/order_iv_true"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_touming"></View>
</LinearLayout>
