<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/redbag_item_container_ll"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_redbag">
            <ImageView
                android:id="@+id/iv_redbag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_redbag"/>
            <RelativeLayout
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_type_redbag"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/myredbags_type1"/>
                <TextView
                    android:id="@+id/tv_canuse_tag"
                    android:paddingRight="5dp"
                    android:layout_alignBottom="@id/tv_type_redbag"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上使用"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/tv_counts_redbag"
                    android:layout_below="@id/tv_type_redbag"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="19sp"
                    android:textColor="@color/lightred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

