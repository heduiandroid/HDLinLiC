<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:background="@color/white">

    <ImageView
        android:id="@+id/iv_order_title_find_back"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"/>

    <TextView
        android:id="@+id/tv_order_title_find"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_order_title_find_back"
        android:gravity="center_vertical"
        android:text="找外卖"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_order_title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/order_iv_title_location"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_title_location"
            android:singleLine="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_to_search"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/imagebtn_search"
        android:background="@color/white"/>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/gray_fooddetails_bag"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>
