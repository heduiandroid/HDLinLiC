<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_car_voice_need"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.linli.consumer.ui.takecar.TakeCarVoiceNeedActivity">
    <include
        layout="@layout/normal_top_header" />
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_start_place"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:textColor="@color/notselect_text"
            android:drawableLeft="@mipmap/ic_start_point"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/notselect_text"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/ic_left"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_end_point"/>
            <TextView
                android:id="@+id/tv_tag"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic_left"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点："
                android:textSize="16sp"
                android:textColor="@color/gray"/>
            <RelativeLayout
                android:id="@+id/ll_bg_voice"
                android:layout_toRightOf="@id/tv_tag"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@mipmap/bg_talkingpop">
                <ImageView
                    android:id="@+id/iv_wave"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_wave3"/>
                <TextView
                    android:id="@+id/tv_voicetime"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等待录音"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_reset_voice"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重录"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/cb_checked_direct"
                android:drawablePadding="5dp"
                android:textColor="@color/gray"
                android:background="@drawable/btn_gray"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/light_gray">
            <Button
                android:id="@+id/btn_cancel"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消发送"
                android:textColor="@color/color_shop_sort_health_item_label"
                android:textSize="16sp"
                android:background="@drawable/selector_transparent"/>
        </FrameLayout>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="立即叫车"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:background="@drawable/selector_white"/>
    </LinearLayout>
</LinearLayout>
