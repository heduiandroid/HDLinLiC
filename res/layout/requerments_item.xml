<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_headimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/defaut_headportrait_big"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@mipmap/defaut_headportrait_big"
            fresco:failureImageScaleType="centerInside"
            fresco:roundAsCircle="true"/>
        <RelativeLayout
            android:id="@+id/ll_bg_voice"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/bg_talkingpop"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_wave"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wave3"/>
            <TextView
                android:id="@+id/tv_voicetime"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0''"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_requer_photo"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/default_background"
            fresco:placeholderImageScaleType="centerInside"
            fresco:failureImage="@mipmap/default_background"
            fresco:failureImageScaleType="centerInside"
            fresco:roundedCornerRadius="2dp"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/ll_bg_text"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_requer_text"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@mipmap/bg_talkingpop"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>