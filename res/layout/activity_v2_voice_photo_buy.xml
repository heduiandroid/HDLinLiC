<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_v2_voice_photo_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.linli.consumer.ui.main.V2VoicePhotoBuyActivity">
    <include
        android:id="@+id/header"
        layout="@layout/normal_top_header" />


    <LinearLayout
        android:id="@+id/ll_requerments"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_gray">
        <LinearLayout
            android:id="@+id/ll_want_text_requerment"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <EditText
                android:id="@+id/et_text"
                android:background="@drawable/bg_talking_edittext"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:hint="请输入您想要的..."
                android:maxLength="25"
                android:textColorHint="@color/notselect_text"
                android:textSize="16sp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_sendtext"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="发送"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_orange"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_requerments"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_show_edittext"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_showedittext"
                android:background="@drawable/selector_white"/>
            <LinearLayout
                android:id="@+id/ll_press_record"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_tuoyuan_frameorange">
                <TextView
                    android:id="@+id/tv_recording_text"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:text="点击说话"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@mipmap/ic_micphone_gray"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_show_menu"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_showmenu"
                android:background="@drawable/selector_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_want_other_requerment"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/ll_take_picture"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/selector_white"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_take_photo"/>
                <TextView
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图像"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_show_fasttext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/selector_white"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_show_fasttext"/>
                <TextView
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常用短语"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_scanning"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/selector_white"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_scanning"/>
                <TextView
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fast_text"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/selector_white"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_nofasttext"
                android:padding="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="没有常用词语,马上添加吧~"
                android:background="@color/white"
                android:textColor="@color/notselect_text"
                android:visibility="gone"/>
            <ListView
                android:id="@+id/lv_fast_text"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                android:divider="@color/light_gray"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:visibility="gone">
            </ListView>

            <LinearLayout
                android:id="@+id/ll_add_fasttext"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/selector_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="添加常用词语"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@mipmap/ic_add_fasttext"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/header"
        android:layout_above="@id/ll_requerments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/mlv_requerments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@color/light_gray"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:visibility="visible"
            android:background="@color/light_gray">
        </ListView>
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/light_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nodata"
        android:layout_marginTop="60dp"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_norequerments"/>
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马上发送您的需求吧~"
            android:textSize="16sp"
            android:textColor="@color/gray_index_listview_menshi"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_recording"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_record"
        android:visibility="gone">
        <ImageView
            android:id="@+id/sound_progress"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/mic"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/mic" />
        <RelativeLayout
            android:paddingTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mic">
            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="正在录音"/>
                <TextView
                    android:id="@+id/msg"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_voicecancel"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"/>
            <TextView
                android:id="@+id/tv_alert"
                android:padding="30dp"
                android:layout_below="@id/ll_title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/say_sth"
                android:textColor="@color/gray"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
